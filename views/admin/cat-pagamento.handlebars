<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Listar Categorias de Pagamentos</h2>
            </div>
            <a href="/cad-cat-pagamento">
                <div class="p-2">
                    <button class="btn btn-outline-success btn-sm">
                        Cadastrar
                    </button>
                </div>
            </a>
        </div>

        {{>_msg}}
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>

                        <th>Nome</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each catpagamentos}}

                    <tr>
                        <td> {{nome}}</td>
                        <td class="text-center">
                            <span class="d-none d-md-block">
                                <a href="visualizar.html" class="btn btn-outline-primary btn-sm">Visualizar</a>
                                <a href="editar.html" class="btn btn-outline-warning btn-sm">Editar</a>
                                <a href="apagar.html" class="btn btn-outline-danger btn-sm" data-toggle="modal"
                                    data-target="#apagarRegistro">Apagar</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="visualizar.html">Visualizar</a>
                                    <a class="dropdown-item" href="editar.html">Editar</a>
                                    <a class="dropdown-item" href="apagar.html" data-toggle="modal"
                                        data-target="#apagarRegistro">Apagar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>