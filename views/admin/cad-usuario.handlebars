<div class="content p-1">
 <div class="list-group-item">
  <div class="d-flex">
   <div class="mr-auto p-2">
    <h2 class="display-4 titulo">Cadastrar Usuário</h2>
   </div>
   <div class="p-2">
    <span class="d-none d-md-block">
     <a href="/usuarios" class="btn btn-outline-info btn-sm">Listar</a>

    </span>
    <div class="dropdown d-block d-md-none">
     <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      Ações
     </button>
     <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
      <a class="dropdown-item" href="/cat-pagamento">Listar</a>

     </div>
    </div>
   </div>

  </div>
  {{>_msg}}
  <hr>
  <form action="add-usuario" method="POST">
   <div class="form-row">
    <div class="form-group col-md-12">
     <label><span class="text-danger">*</span> Nome</label>
     <input name="nome" type="text" class="form-control" id="nome" placeholder="Informe seu nome completo" required>
    </div>

   </div>
   <div class="form-row">
    <div class="form-group col-md-12">
     <label><span class="text-danger">*</span>Email</label>
     <input name="email" type="email" class="form-control" id="email" placeholder="Informe o email" required>
    </div>
   </div>
   <div class="form-row">
    <div class="form-group col-md-6">
     <label><span class="text-danger">*</span>Senha</label>
     <input name="senha" type="password" class="form-control" id="senha" placeholder="Informe sua senha" required>
    </div>
    <div class="form-group col-md-6">
     <label><span class="text-danger">*</span>Repetir Senha</label>
     <input name="repitasenha" type="password" class="form-control" id="repitasenha" placeholder="Repita sua senha"
      required>
    </div>

   </div>


   <p>
    <span class="text-danger">* </span>Campo obrigatório
   </p>
   <button type="submit" class="btn btn-success">Cadastrar</button>
  </form>
 </div>
</div>