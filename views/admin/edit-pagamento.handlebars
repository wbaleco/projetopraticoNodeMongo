<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Editar Pagamento</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/pagamentos" class="btn btn-outline-info btn-sm">Listar</a>
                    <a href="/cad-pagamento" class="btn btn-outline-success btn-sm">Cadastrar</a>
                    <a href="/del-pagamento/{{pagamento._id}}" class="btn btn-outline-danger btn-sm">Apagar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/pagamentos">Listar</a>
                        <a class="dropdown-item" href="/cad-pagamento">Cadastrar</a>
                        <a class="dropdown-item" href="/del-pagamento/{{pagamento._id}}">Apagar</a>
                    </div>
                </div>
            </div>

        </div>
        {{>_msg}}
        <hr>
        <form action="update-pagamento" method="POST">
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label><span class="text-danger">*</span> Nome</label>
                    <input name="nome" type="text" class="form-control" id="nome" placeholder="Nome do pagamento" value="{{pagamento.nome}}">
                </div>
                <div class="form-group col-md-4">
                    <label><span class="text-danger">*</span>Valor</label>
                    <input name="valor" type="text" class="form-control" id="valor" placeholder="Valor do pagamento" value="{{pagamento.valor}}">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Categoria de Pagamento</label>
                    <select name="catpagamento" id="catpagamento" class="form-control">
                        <option value="{{pagamento.catpagamento._id}}">{{pagamento.catpagamento.nome}}</option>
                        {{#each catpagamentos}}
                        <option value="{{_id}}">{{nome}}</option>
                        {{else}}
                        <option value="">Nenhuma Categoria de pagamento encontrado</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <p>
                <span class="text-danger">* </span>Campo obrigatório
            </p>
            <button type="submit" class="btn btn-success">Salvar Alteração</button>
        </form>
    </div>
</div>