<div class="content p-1">
 <div class="list-group-item">
  <div class="d-flex">
   <div class="mr-auto p-2">
    <h2 class="display-4 titulo">Usuários Cadastrados</h2>
   </div>
   <a href="/cad-usuario">
    <div class="p-2">
     <button class="btn btn-outline-success btn-sm">
      Cadastrar
     </button>
    </div>
   </a>
  </div>
  <hr>

  {{>_msg}}


  <div class="table-responsive">
   <table class="table table-striped table-hover table-bordered">
    <thead>
     <tr>

      <th>Usuário</th>
      <th>Email</th>
      <th class="text-center">Ações</th>
     </tr>
    </thead>
    <tbody>
     {{#each usuarios.docs}}

     <tr>
      <td> {{nome}}</td>
      <td> {{email}}</td>
      <td class="text-center">
       <span class="d-none d-md-block">
        <a href="/visu-usuario/{{_id}}" class="btn btn-outline-primary btn-sm">Visualizar</a>
        <a href="/edit-usuario/{{_id}}" class="btn btn-outline-warning btn-sm">Editar</a>
        <a href="/del-usuario/{{_id}}" class="btn btn-outline-danger btn-sm">Apagar</a>
       </span>
       <div class="dropdown d-block d-md-none">
        <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar" data-toggle="dropdown"
         aria-haspopup="true" aria-expanded="false">
         Ações
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
         <a class="dropdown-item" href="/visu-usuario/{{_id}}">Visualizar</a>
         <a class="dropdown-item" href="/edit-usuario/{{_id}}">Editar</a>
         <a class="dropdown-item" href="/del-usuario/{{_id}}">Apagar</a>
        </div>
       </div>
      </td>
     </tr>
     {{/each}}
    </tbody>
   </table>
   <nav aria-label="paginacao">
    <ul class="pagination pagination-sm justify-content-center">
     {{#if usuarios.hasPrevPage}}
     <li class="page-item">
      <a class="page-link" href="/usuarios?page=1" tabindex="-1">Primeira</a>
     </li>
     <li class="page-item"><a class="page-link" href="/usuarios?page={{usuarios.prevPage}}">{{usuarios.prevPage}}</a>
     </li>
     {{else}}
     <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1">Primeira</a>
     </li>
     {{/if}}


     <li class="page-item active">
      <a class="page-link" href="#">{{usuarios.page}}</a>
     </li>

     {{#if usuarios.hasNextPage}}
     <li class="page-item"><a class="page-link" href="/usuarios?page={{usuarios.nextPage}}">{{usuarios.nextPage}}</a>
     </li>
     <li class="page-item">
      <a class="page-link" href="/usuarios?page={{usuarios.totalPages}}">Última</a>
     </li>
     {{else}}
     <li class="page-item disabled">
      <a class="page-link" href="#">Última</a>
     </li>
     {{/if}}

    </ul>
   </nav>
  </div>
 </div>
</div>